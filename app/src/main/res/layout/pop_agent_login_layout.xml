<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dp_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_conner_ffffff"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:text="付费："
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/rg_agent_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_agent_login_pop"
                    android:button="@null"
                    android:padding="@dimen/dp_10"
                    android:text="15元/月"
                    android:textColor="@color/color_state_agent_login"
                    android:textSize="@dimen/sp_18" />

                <RadioButton
                    android:id="@+id/rb_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/selector_agent_login_pop"
                    android:button="@null"
                    android:padding="@dimen/dp_10"
                    android:text="155元/年"
                    android:textColor="@color/color_state_agent_login"
                    android:textSize="@dimen/sp_18" />

                <RadioButton
                    android:id="@+id/rb_forever"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/selector_agent_login_pop"
                    android:button="@null"
                    android:padding="@dimen/dp_10"
                    android:text="255元/永久"
                    android:textColor="@color/color_state_agent_login"
                    android:textSize="@dimen/sp_18" />
            </RadioGroup>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_select_staff_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:text="选择员工账号"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_18" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/agent_pop_recview"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_200"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/shape_conner_f7f7f7"
            android:padding="@dimen/dp_10" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:text="代理奖金：20%"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:text="剩余应付：12元"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_18" />

        <View style="@style/horizontal_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_20" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确认支付"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_20" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>